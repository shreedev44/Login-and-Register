<%- include('../layouts/header') -%>
<link href="/assets/styles/editStyle.css" rel="stylesheet">


<header class="container-fluid mt-2 justify-content-center text-center">
    <img id="nurb-logo" class="img-fluid d-inline" src="/images/logo-nuerburgring-circuit.svg" alt="">
    <p class="brand1 d-inline">Nordschleife</p>
    <p class="brand2 d-inline">Automobiles</p>
</header> 
<section>
    <div class="mt-2 pt-1">
        <div class="row container-fluid m-auto">
            <div class="col-12 col-sm-8 col-md-8 col-lg-4 m-auto container-fluid">
                <div id="card" class="card rounded-5">
                    <div class="card-body">
                        <div class="d-flex justify-content-center">
                            <svg xmlns="http://www.w3.org/2000/svg" width="50" height="50" fill="white" class="bi bi-person-circle" viewBox="0 0 16 16">
                                <path d="M11 6a3 3 0 1 1-6 0 3 3 0 0 1 6 0"/>
                                <path fill-rule="evenodd" d="M0 8a8 8 0 1 1 16 0A8 8 0 0 1 0 8m8-7a7 7 0 0 0-5.468 11.37C3.242 11.226 4.805 10 8 10s4.757 1.225 5.468 2.37A7 7 0 0 0 8 1"/>
                            </svg>
                        </div>
                        <div class="h2 text-center mb-4 text-light">
                            Edit Profile
                        </div>
                        <form action="/editprofile" method="post" id="SignupForm">
                            <!-- First Name -->
                            <div class="form-control rounded-1 d-grid my-2">
                                <input id="Fname" name="Fname" type="text" class="my-2 user" value="<%= locals.user.first_name%>"" required>
                            </div>
                            <div class="">
                                <p></p>
                            </div>
                            <!-- Last Name -->
                            <div class="form-control rounded-1 d-grid mb-2">
                                <input id="Lname" name="Lname" type="text" class="my-2 border-0" value="<%= locals.user.last_name%>" required>

                            </div>
                            <div class="">
                                <p></p>
                            </div>
                            <!-- Email -->
                            <div class="form-control rounded-1 d-grid mb-2">
                                <input id="email" name="email" type="text" class="my-2 border-0" value="<%= locals.user.email%>" required>

                            </div>
                            <div class="">
                                <p></p>
                            </div>
                            <!-- Password -->
                            <div class="form-control rounded-1 d-grid pass">
                                <input name="password" id="password" type="password" class="my-2 border-0" placeholder="Password" required>
                                <i class="bi bi-eye-slash" id="togglePassword"></i>

                            </div>
                            <div class="">
                                <p></p>
                            </div>
                            <!-- Sign Up -->
                            <div class="text-center d-grid">
                                <button type="submit" class="btn btn-lg btn-dark mt-4 mb-2 mx-5 py-2 rounded-pill login-button">Update</button>
                                
                            </div>
                            

                            <div class="text-center mb-1">
                                <span id="invalid-name" class="text-danger" style="display: none;">Please enter a valid name</span>
                            </div>
                            
                            <div class="text-center mb-1">
                                <span id="invalid-email" class="text-danger" style="display: none;">Please enter a valid email</span>
                            </div>
                            
                            <div class="text-center mb-1">
                                <span id="invalid-pass" class="text-danger" style="display: none;">Password must contain minimum 8 characters</span>
                            </div>

                            <div class="text-center">
                                <span class="">Change </span>
                                <a class="link-success" href="/changepassword">Password</a>
                            </div>

                            <% if (locals.PasswordStatus == 'failed'){ %>
                                <div class="text-center text-danger">
                                    <span class="">Incorrect Password</span>
                                </div>
                            <% } else if(locals.UserStatus == 'failed'){ %>
                                <div class="text-center">
                                    <span class="">Updation Failed</span>
                                </div>
                            <% } %>
                        </form>
                    </div>
                </div>
            </div>
        </div>

    </div>
</section>
<script src="/assets/scripts/signupScript.js"></script>
<!--Bootstrap-->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
<%- include('../layouts/footer') -%>