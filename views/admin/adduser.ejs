<%- include('../layouts/header') -%>
    <link href="/assets/styles/adduserStyle.css" rel="stylesheet">


    <nav class="navbar navbar-light bg-transparent position-fixed w-100 top-0" style="z-index: 2;">
        <div class="container-fluid">
            <a class="btn btn-outline-dark" href="/admin/users">Go back</a>
        </div>
    </nav>


    <section>
        <div class="mt-5 pt-5">
            <div class="row container-fluid m-auto">
                <div class="col-12 col-sm-8 col-md-8 col-lg-4 m-auto container-fluid">
                    <div id="card" class="card rounded-5">
                        <div class="card-body">
                            <div class="d-flex justify-content-center">
                                <svg xmlns="http://www.w3.org/2000/svg" width="50" height="50" fill="white"
                                    class="bi bi-person-circle" viewBox="0 0 16 16">
                                    <path d="M11 6a3 3 0 1 1-6 0 3 3 0 0 1 6 0" />
                                    <path fill-rule="evenodd"
                                        d="M0 8a8 8 0 1 1 16 0A8 8 0 0 1 0 8m8-7a7 7 0 0 0-5.468 11.37C3.242 11.226 4.805 10 8 10s4.757 1.225 5.468 2.37A7 7 0 0 0 8 1" />
                                </svg>
                            </div>
                            <div class="h2 text-center mb-4 text-light">
                                Add User
                            </div>
                            <form action="/admin/adduser" method="POST" id="SignupForm">
                                <!-- First Name -->
                                <div class="form-control rounded-1 d-grid my-2">
                                    <input id="Fname" name="Fname" type="text" class="my-2 user"
                                        placeholder="First Name" required>
                                </div>
                                <div class="">
                                    <p></p>
                                </div>
                                <!-- Last Name -->
                                <div class="form-control rounded-1 d-grid mb-2">
                                    <input id="Lname" name="Lname" type="text" class="my-2 border-0"
                                        placeholder="Last Name" required>

                                </div>
                                <div class="">
                                    <p></p>
                                </div>
                                <!-- Email -->
                                <div class="form-control rounded-1 d-grid mb-2">
                                    <input id="email" name="email" type="text" class="my-2 border-0" placeholder="Email"
                                        required>

                                </div>
                                <div class="">
                                    <p></p>
                                </div>
                                <!-- Password -->
                                <div class="form-control rounded-1 d-grid pass">
                                    <input name="password" id="password" type="password" class="my-2 border-0"
                                        placeholder="Password" required>
                                    <i class="bi bi-eye-slash" id="togglePassword"></i>

                                </div>
                                <div class="">
                                    <p></p>
                                </div>
                                <!-- Sign Up -->
                                <div class="text-center d-grid">
                                    <button type="submit"
                                        class="btn btn-lg btn-dark mt-4 mb-2 mx-5 py-2 rounded-pill login-button">Add
                                        User</button>

                                </div>


                                <div class="text-center mb-1">
                                    <span id="invalid-name" class="text-danger" style="display: none;">Please enter a
                                        valid name</span>
                                </div>

                                <div class="text-center mb-1">
                                    <span id="invalid-email" class="text-danger" style="display: none;">Please enter a
                                        valid email</span>
                                </div>

                                <div class="text-center mb-1">
                                    <span id="invalid-pass" class="text-danger" style="display: none;">Password must
                                        contain minimum 8 characters</span>
                                </div>

                                <% if(locals.status=='success' ) {%>
                                    <div class="text-center text-success">
                                        <span class="">User Added successfully</span>
                                    </div>
                                    <% }else if (locals.status=='failed' ){ %>
                                        <div class="text-center text-danger">
                                            <span class="">Adding failed</span>
                                        </div>
                                        <% }else if (locals.exist=='true' ){ %>
                                            <div class="text-center text-danger">
                                                <span class="">User already exists</span>
                                            </div>
                                            <% } %>
                            </form>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </section>
    <script src="/assets/scripts/signupScript.js"></script>
    <!--Bootstrap-->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
        crossorigin="anonymous"></script>
    <%- include('../layouts/footer') -%>