<%- include('../layouts/header') -%>
<link rel="stylesheet" href="/assets/styles/dashboardStyle.css">
<nav class="navbar navbar-dark bg-transparent">
    <form class="container-fluid justify-content-end">
        <a class="btn btn-light mx-2" href="/admin/users">Go to users</a>
        <a class="btn btn-danger mx-2" href="/admin/logout">Logout</a>
    </form>
  </nav>
<div class="text-center text-light center-div py-3" id="login">
    <div class="container border-2  border-light w-50 py-5">
        <span class="wel">Welcome</span>
        <h1 class="user"><%= locals.admin?locals.admin.first_name + " " + locals.admin.last_name: "Admin" %></h5>
    </div>
</div>


<% if(locals.PasswordChange == 'success') { %>
    <div class="container-fluid mt-5 pt-5 d-flex justify-content-center">
        <div class="alert alert-success alert-dismissible fade show w-25 text-center" role="alert">
            <strong>Password changed Successfully!</strong>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    </div>
<% } %>

<% if(locals.ProfileChange == 'success') { %>
    <div class="container-fluid mt-5 pt-5 d-flex justify-content-center">
        <div class="alert alert-success alert-dismissible fade show w-25 text-center" role="alert">
            <strong>Profile Updated Successfully!</strong>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    </div>
<% } %>

